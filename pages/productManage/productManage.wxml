<view class="productManage"> 
<view class="sort"> 
  <view> <text>启用状态</text> <text class="iconfont icon-triangle"></text></view>
    <view class="search " >
   <text class="iconfont icon-search  "></text>
  </view>
</view>
<view class="counts">共计:  <text>{{data.total}}</text> 条数据 
<text class="add"  bindtap="add">添加</text>
</view>

 <scroll-view  class="wrapperCard" scroll-y="{{true}}"  scroll-top="{{top}}"  bindscrolltolower="loadimgMore">
 <view class="cards" >
       <view  class="cards">
 <view wx:for="{{data.rows}}" wx:key="index" class="card_list"  data-item="{{item}}" bindtap="toDelete">
 <view class="card_wrapper">
  <view class="card_left"><text>{{index+1}}.产品名称: {{item.productName}}</text> </view>
  </view>
    <view> <text>产品名称:</text> {{item.productName}}</view>
  <view> <text>生产类别:</text> {{item.productClassName}}</view>
  <view> <text>创建时间:</text> {{item.createTime}}</view>
  
 </view>
</view>
       <!-- loading开始 -->
        <loading wx:if="{{data.rows.length<data.total}}"> </loading>
    <!-- loading结束 -->
 </view>

</scroll-view>

</view>