.detail{
  position: relative;
  height: 100vh;
  overflow: hidden;
}
.detail>.detail_item>label>text{
  color: #f00;
}
.detail>.detail_item{
  height: 90rpx;
  border-bottom: 1rpx solid #e6e6e6;
  display: flex;
  padding: 0 20rpx;
}
.detail>.detail_item>label{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
}
.detail>.detail_item>label>text{
  margin-left: 10rpx;
}
.detail>.detail_item>view{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail>.detail_item>view>input,.detail>.detail_item>view>picker{
    width: 100%;
    padding: 10rpx;
    border:1rpx solid #e6e6e6 ;
}
.detail>.detail_item>view>picker{
  color: #969696;
}

.sign{
  padding: 12rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.sign text{
  font-weight: bold;
  padding-left: 16rpx;
  border-left: 12rpx solid #00AE74;
}
.content{
  padding:40rpx ;
}
.content>view{
  border:2rpx  dashed #000;
  width: 100%;
  height: 220rpx; 
  position: relative;
}
.content>view>view{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.SignPage{

   position: absolute;
   padding:20rpx;
   box-sizing: border-box;
   z-index: 2;
   width: 100%;
   top:100vh;
   height: 100%;
   background-color: #fff;
   transition:top .5s ;
} 
.active{
  top :0
} 
.PageTop{
  display: flex;
  align-items: center;
 
}
.operations{
    display: flex;
    justify-content: space-around;
  flex:1;
  
}

.operations>button{
  white-space: nowrap;
  font-weight: normal;
 

 
}
.operations>button:nth-child(1)
{
  background-color: #c5d6dd;
  color: #000;
}
.operations>button:nth-child(2)
{
  background-color: #f00;
  color: #fff;
}
.operations>button:nth-child(3)
{
  background-color: #2fbbdd;
  color: #fff;
}

canvas{
  display: block !important;
  border:1rpx solid #999;
  margin-top: 100rpx;
  border-radius: 14rpx;
}

.signature{
  width: 200rpx;
}
.signature>image{
  width: 100%;
  /* transform:rotate(-90deg); */
}
.commit{
  background-color: #00AE74;
   width: 80vw !important;
  color: #fff;
  margin-top: 60rpx;
   border-radius: 80rpx;
}